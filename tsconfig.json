{
  "compileOnSave": true,
  "compilerOptions": {
    /* Basic Options */
    "target": "es5",
    "module": "commonjs",
    "lib": ["dom", "es2015", "es2017"],
    "sourceMap": true,
    "jsx": "react",
    /* Strict Type-Checking Options */
    "strict": true,
    "noImplicitAny": true,

    /* Additional Checks */
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "allowSyntheticDefaultImports": true 
  },
  "include": ["./src/**/*"]
}